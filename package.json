{
  "name": "awesome-vscode-extension-boilerplate",
  "displayName": "Awesome VSCode Extension Boilerplate",
  "version": "0.0.29",
  "description": "An awesome vscode extension boilerplate",
  "publisher": "mizchi",
  "private": true,
  "preview": true,
  "author": {
    "name": "mizchi",
    "email": "miz404@gmail.com",
    "url": "https://github.com/mizchi"
  },
  "license": "MIT",
  "homepage": "https://github.com/mizchi/awesome-vscode-extension-boilerplate/blob/master/README.md",
  "main": "./out/src/extension.js",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "awesome-vscode-extension-boilerplate.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "packageManager": "pnpm@8.6.11",
  "scripts": {
    "vscode:prepublish": "pnpm build --minify",
    "clean": "npx rimraf -rf ./out",
    "build": "esbuild --bundle --minify --outdir=out/src --format=cjs --sourcemap --external:vscode src/extension.ts",
    "watch": "esbuild --bundle --minify --outdir=out/src --format=cjs --sourcemap --external:vscode --watch src/extension.ts",
    "compile:test": "pnpm clean && tsc -b ./test/tsconfig.json",
    "test": "pnpm compile:test && node ./out/test/runTests.js",
    "package": "vsce package --no-dependencies",
    "release": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.2.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.19",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.3",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.18.11",
    "esbuild-visualizer": "^0.4.1",
    "eslint": "^8.44.0",
    "glob": "^10.3.2",
    "mocha": "^10.2.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
